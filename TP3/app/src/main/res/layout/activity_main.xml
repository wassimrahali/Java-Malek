<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Question: Gender -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quel est votre sexe :"
        android:textSize="18sp"
        android:paddingBottom="10dp"/>

    <!-- Radio Buttons for Gender -->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculin" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminin" />
    </RadioGroup>

    <!-- Question: Programming languages -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quel(s) langage(s) maÃ®trisez-vous :"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"/>

    <!-- Checkboxes for languages -->
    <CheckBox
        android:id="@+id/checkbox_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C" />

    <CheckBox
        android:id="@+id/checkbox_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java" />

    <CheckBox
        android:id="@+id/checkbox_cobol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COBOL" />

    <CheckBox
        android:id="@+id/checkbox_perl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perl" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:layout_marginTop="20dp"/>
</LinearLayout>
